extends layouts/main.pug

block content
    
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">
                    <span class="page-title-icon bg-gradient-primary text-white mr-2">
                    <i class="mdi mdi-home"></i>
                    </span> Edit Asset Master 
                </h3>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                    </li>
                    </ul>
                </nav>
            </div>

            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    if msg
                        div(class="alert alert-danger") #{msg}
                    <h4 class="card-title">Asset  Form</h4> 
                    form(class="forms-sample", action=`/editasset?id=${datas.id}`, method="post")
                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Serial No</label>
                            <div class="col-sm-9">
                            input(type="text", name="serialno", class="form-control", id="exampleInputEmail2", placeholder="Serail No", value=`${datas.serialno}` required)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Make</label>
                            <div class="col-sm-9">
                            input(type="text" name="make" class="form-control" id="exampleInputEmail2" placeholder="Make" value=`${datas.make}` required)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Model</label>
                            <div class="col-sm-9">
                            input(type="text" name="model" class="form-control" id="exampleInputMobile" placeholder="Model" value=`${datas.model}` required)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Purchase Cost</label>
                            <div class="col-sm-9">
                             input(type="number" name="purchasecost" class="form-control" id="exampleInputMobile" placeholder="purchasecost" value=`${datas.purchasecost}` required)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Purchase Date</label>
                            <div class="col-sm-9">
                            input(type="date" name="purchasedate" class="form-control" id="exampleInputMobile" placeholder="date" value=`${datas.purchasedate}` required)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Supplier Name</label>
                            <div class="col-sm-9">
                             input(type="text" name="suppliername" class="form-control" id="exampleInputMobile" placeholder="supplier name" value=`${datas.supplier}` required)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Asset Category Name</label>
                            <div class="col-sm-9">
                            select(name="categoryid", class="form-control", placeholder="category name", required)
                                if categories.length > 0
                                    option(value="") select category 
                                    each cat in  categories 
                                            option(value=`${cat.id}`  selected=(cat.id === datas.categoryId) ) #{cat.categoryname}
                            </div>
                        </div>

                       
                        <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                        <a href="/employeeview" class="btn btn-light">Cancel</a>
                    </form>
                  </div>
                </div>
            </div> 
        </div>
    </div> 
         
